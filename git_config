[push]
  default = simple

[diff]
  renames = copies
  tool = bc3

[difftool]
  prompt = false
  keepBackup = false

[merge]
  tool = bc3

[mergetool]
  bc3=trustExitCode
  keepBackup=false

[alias]
  bn = "!git rev-parse --abbrev-ref HEAD"
  pub = "!git push -u origin $(git bn)"
  pr = pull --rebase
  cm = commit -m
  cma = commit -am
  co = checkout
  com = checkout master
  cob = checkout -b
  new = log master.. --reverse
  ca = commit --amend -C HEAD
  rbc = rebase --continue
  rba = rebase --abort
  rbi = rebase --interactive --autosquash
  wip = !git add . && git commit -m WIP
  rom = rebase origin/master
  romi = rebase --interactive --autosquash origin/master
  d = diff
  ds = diff --staged
  pff = pull --ff-only
  rmx = "!sh -c 'git ls-files --deleted -z $1 | xargs -0 git rm' -"
  pushf = push --force-with-lease
  cf = commit --fixup  
  cs = commit --squash
  fixup = !sh -c 'REV=$(git rev-parse $1) && git cf $@ && GIT_SEQUENCE_EDITOR=true git rbi $REV^' -
  squash = !sh -c 'REV=$(git rev-parse $1) && git cs $@ && GIT_SEQUENCE_EDITOR=true git rbi $REV^' -
  ignore = "!f() { echo $1 >>.gitignore; }; f"
